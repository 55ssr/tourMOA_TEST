    <definition name="main/*" extends="layout1">
        <put-attribute name="content" value="/WEB-INF/jsp/main/{1}.jsp" />
    </definition>
    
    <definition name="common/*" extends="layout1">
        <put-attribute name="content" value="/WEB-INF/jsp/common/{1}.jsp" />
