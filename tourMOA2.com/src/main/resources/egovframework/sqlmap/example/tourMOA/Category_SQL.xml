<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Category">

	<typeAlias alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="categoryVO" type="tourMOA.service.CategoryVO"/>
	
	<insert id="categoryDAO.insertCategory">
		INSERT INTO category (
				ctgcd,
				ctgnm,
				comm,
				use,
				regdate,
				upddate
			) VALUES (
				#ctgcd#,
				#ctgnm#,
				#comm#,
				#use#,
				sysdate,
				sysdate
			)
	</insert>
	
	<select id="categoryDAO.selectCategoryList" resultClass="egovMap">
		SELECT	ctgcd,
				ctgnm,
				use,
				regdate
		FROM 
			category
		WHERE
			1 = 1
			<isNotNull property="ctgcd">
				<isNotEmpty property="ctgcd">
					AND ctgcd LIKE #ctgcd# || '%'
					AND length(ctgcd) = length(#ctgcd#)+2
				</isNotEmpty>
			</isNotNull>
			
			<isNotNull property="ctgnm">
				<isNotEmpty property="ctgnm">
					AND ctgnm LIKE '%' || #ctgnm# || '%'
				</isNotEmpty>
			</isNotNull>			
			<isNotNull property="use">
				<isNotEmpty property="use">
					AND use = #use#
				</isNotEmpty>
			</isNotNull>			
	</select>
</sqlMap>